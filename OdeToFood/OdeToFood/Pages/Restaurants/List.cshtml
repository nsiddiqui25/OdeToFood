@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <!--<input type="search" class="form-control" value="" name="searchTerm"/>-->
            <input type="search" class="form-control" asp-for="SearchTerm"/>
            <button class="btn btn-outline-dark">Search</button>
        </div>
    </div>
</form>

<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
    <tr>
        <td>@restaurant.Name</td>
        <td>@restaurant.Location</td>
        <td>@restaurant.Cuisine</td>
        <td>
            <a class="btn btn-secondary btn-sm" asp-page="./Detail" asp-route-restaurantID="@restaurant.Id">Details</a>
        </td>
        <td>
            <a class="btn btn-outline-secondary btn-sm" asp-page="./Edit" asp-route-restaurantID="@restaurant.Id">Edit</a>
        </td>

    </tr>
    }

</table>

<a asp-page=".\Edit" class="btn btn-primary">Add New</a>

<div>@Model.Message</div>
